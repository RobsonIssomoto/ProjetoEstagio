@model ProjetoEstagio.Models.SupervisorModel

<form id="form-cadastrar-supervisor" asp-controller="Supervisor" asp-action="Cadastrar" method="post" class="row d-flex justify-content-center" style="font-size: .75em">

    @Html.AntiForgeryToken()

    <!-- ESTE DIV DEVE ENVOLVER TODO O CONTEÚDO DO FORMULÁRIO -->
    <div class="col-12 bg-white my-2 p-3 rounded shadow">

        <div class="form-group row m-3">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" required />
            <span asp-validation-for="Nome" class="text-danger" style="font-size: .9em;"></span>
        </div>

        <div class="form-group row m-3">
            <label for="CPF">CPF</label>
            <input type="text" class="form-control cpf" asp-for="CPF" required />
            <span asp-validation-for="CPF" class="text-danger" style="font-size: .9em;"></span>
        </div>


        <div class="form-group row m-3">
            <label for="Email">E-mail</label>
            <input type="email" class="form-control" asp-for="Email" required />
            <span asp-validation-for="Email" class="text-danger" style="font-size: .9em;"></span>
        </div>

        <div class="form-group row m-3">
            <label for="Telefone">Telefone</label>
            <input type="text" class="form-control" asp-for="Telefone" required />
            <span asp-validation-for="Telefone" class="text-danger" style="font-size: .9em;"></span>
        </div>

        <div class="form-group row m-3">
            <label for="Cargo">Cargo</label>
            <input type="text" class="form-control" asp-for="Cargo" required />
            <span asp-validation-for="Cargo" class="text-danger" style="font-size: .9em;"></span>
        </div>


        <div class="form-group row m-3">
            <button type="submit" class="btn btn-danger mb-2">Cadastrar</button>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>

    </div> <!-- O DIV FECHA AQUI -->

</form> <!-- O FORM FECHA AQUI -->
