@model ProjetoEstagio.Models.SupervisorModel
@{
    ViewData["Title"] = "Editar Supervisor";
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



<div class="container mb-4">
    <form asp-controller="Supervisor" asp-action="Alterar" method="post" class="row d-flex justify-content-center" style="font-size: .75em">
        <div class="col-4 bg-white my-2 p-3 rounded shadow" style="min-width: 380px">
            <h3 class="text-center mb-3">EDITAR SUPERVISOR</h3>

            <input type="hidden" asp-for="Id" />

            <div class="form-group row m-3">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" asp-for="Nome" required />
            </div>

            <div class="form-group row m-3">
                <label for="CPF">CPF</label>
                <input type="text" class="form-control" asp-for="CPF" required />
            </div>

            <div class="form-group row m-3">
                <label for="Cargo">Cargo</label>
                <input type="text" class="form-control" asp-for="Cargo" required>
            </div>

            <div class="form-group row m-3">
                <button type="submit" class="btn btn-danger mb-2">Editar</button>
                <a asp-controller="Supervisor" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>