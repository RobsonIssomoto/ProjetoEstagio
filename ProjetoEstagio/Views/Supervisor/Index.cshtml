@model List<ProjetoEstagio.Models.SupervisorModel>

@{
    ViewData["Title"] = "Gestão de Supervisores";
    Layout = "_LayoutEmpresa";
}
'
<h3 class="fw-bold">Gestão de Supervisores</h3>
<p class="text-muted">Cadastre, edite ou remova os funcionários que podem atuar como supervisores de estágio. </p>

<div class="card shadow-sm">
    <div class="card-header bg-white p-4">
        <h5 class="mb-0 fw-bold">Supervisores Cadastrados</h5>
        <p class="text-muted mb-0 small">Use o botão "Adicionar Novo Supervisor" para incluir um novo supervisor no sistema.</p>
    </div>

    <div class="d-flex justify-content-between align-items-center p-3 mb-3">
        <a href="javascript:void(0);" class="btn btn-success btn-cadastrar-supervisor">
            <i class="fas fa-plus-circle"></i> Adicionar Novo Supervisor
        </a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <div class="table-responsive p-3">
        <table id="supervisorTable" class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th class="text-start">CPF</th>
                    <th>Cargo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var supervisor in Model)
                    {
                        <tr>
                            <td>@supervisor.Nome</td>
                            <td class="text-start cpf">@supervisor.CPF</td>
                            <td>@supervisor.Cargo</td>
                            <td>
                                <a href="javascript:void(0);"
                                   class="btn btn-primary btn-sm btn-edit-supervisor"
                                   data-id="@supervisor.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="javascript:void(0);"
                                   class="btn btn-danger btn-sm btn-deletar-supervisor"
                                   data-id="@supervisor.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Cadastrar Supervisor -->
<div class="modal fade" id="cadastrarSupervisorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastrar Supervisor (Modal)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

<!-- Modal Editar Supervisor -->
<div class="modal fade" id="editarSupervisorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Supervisor (Modal)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

<!-- Modal Deletar Supervisor -->
<div class="modal fade" id="deletarSupervisorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- O .modal-body agora está VAZIO,
                 pronto para receber o AJAX -->
            <div class="modal-body"></div>
        </div>
    </div>
</div>

