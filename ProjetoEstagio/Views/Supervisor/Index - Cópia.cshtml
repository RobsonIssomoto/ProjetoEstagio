@model List<ProjetoEstagio.Models.SupervisorModel>
@{
    Layout = "_LayoutTeste";
    ViewData["Title"] = "INDEX SUPERVISORES";
}

<div class="container mt-4">
    <div class="text-center">
        <h2>@ViewData["Title"]</h2>
    </div>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>


    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-success" asp-controller="Supervisor" asp-action="Cadastrar">
            <i class="fas fa-plus-circle"></i> Adicionar Novo Supervisor
        </a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="supervisorTable" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col" class="text-start">CPF</th>
                <th scope="col">Cargo</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (SupervisorModel supervisor in Model)
                {
                    <tr>
                        <td>@supervisor.Nome</td>
                        <td class="text-start">@supervisor.CPF</td>
                        <td>@supervisor.Cargo</td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@supervisor.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-action="DeletarConfirmar" asp-route-id="@supervisor.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Nenhum supervisor encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>