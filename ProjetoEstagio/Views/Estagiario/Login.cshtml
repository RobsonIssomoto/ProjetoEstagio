<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="SISTEMA ESTÁGIO">
    <title>SISTEMA ESTÁGIO - Login Estagiário</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    <!-- Scripts de validação MVC -->
    <partial name="_ValidationScriptsPartial" />
</head>

<body>
    <!-- ======== FORMULÁRIO ======== -->
    <!-- TESTE FORMULÁRIO-->
    <div class="container my-5 ">
        <form class="row d-flex align-items-center justify-content-center " style="font-size: .75em">
            <div class=" col-4 bg-white my-2 p-3 rounded shadow" style="min-width: 380px">
                <h3 class="text-center mb-3">LOGIN</h3>

                <!-- CPF ou Email e Senha -->
                <div class="row mb-3">
                    <div class="col">
                        <label for="login" class="form-label mt-3">Login</label>
                        <input type="text" class="form-control" id="login" placeholder="CPF ou E-mail" required>



                        <label for="senha" class="form-label mt-4">Senha</label>
                        <input type="password" class="form-control" id="senha" required>
                        <div class="d-flex mt-1">
                            <!-- Confirmação -->
                            <div class="form-check me-auto">
                                <input class="form-check-input" type="checkbox" id="lembraAcesso">
                                <!-- Esqueceu Senha -->
                                <label class="form-check-label" for="lembraAcesso">
                                    Lembrar Senha
                                </label>
                            </div>
                            <div><a href="#">Esqueceu a senha</a></div>
                        </div>
                    </div>
                </div>


                <!-- Botões -->
                @* <div class="d-flex justify-content-end mt-4 "> *@
                @*     <a href="index.html" class="btn btn-danger ms-2">Cancelar</a> *@
                @*     <button class="btn btn-primary ms-2">Cadastrar</button> *@
                @* </div> *@

                <div class="d-grid gap-2 mt-3 d-md-flex justify-content-md-end">
                    <button class="btn btn-danger me-md-2" type="button">Acessar</button>
                    <button class="btn btn-outline-danger" type="button">Cancelar</button>
                </div>


                <!-- Criar Conta -->
                <div class="me-auto text-center mt-5">Não possui cadastro?<a href="#" style="text-decoration: none;">&nbsp;&nbsp;Criar nova conta</a></div>
            </div>
        </form>
    </div>


    <!-- JS -->
    <script src="~/js/cadastroempresa.js"></script>
</body>
</html>