@model ProjetoEstagio.Models.ViewModels.EstagiarioCadastroViewModel
@{
    ViewData["Title"] = "Cadastrar Estagiário";
    Layout = "_LayoutLogin";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erro!</strong> @TempData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mb-4">
    <form asp-controller="Estagiario" asp-action="Cadastrar" method="post" class="row d-flex justify-content-center" style="font-size: .75em">
        <div class="col-4 bg-white my-2 p-3 rounded shadow" style="min-width: 380px">
            <h3 class="text-center mb-3">CADASTRO DE ESTAGIÁRIO</h3>

            <div class="form-group m-4">
                <h6 class="text-center">Dados Pessoais</h6>
                <label for="Nome">Nome</label>
                <div class="input-group">
                    <input type="text" class="form-control nome" asp-for="Nome" placeholder="Nome completo" />
                </div>
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group m-4">
                <label for="CPF">CPF</label>
                <div class="input-group">
                    <input type="text" class="form-control cpf" asp-for="CPF" placeholder="CPF sem pontos e traços" />
                </div>
                @Html.ValidationMessageFor(x => x.CPF)
            </div>

            <div class="form-group m-4">
                <label for="Telefone">Telefone</label>
                <div class="input-group">
                    <input type="text" class="form-control telefone_com_ddd" asp-for="Telefone" placeholder="(XX)XXXXX-XXXX" />
                </div>
                @Html.ValidationMessageFor(x => x.Telefone)
            </div>

            <div class="form-group m-4">
                <label for="Email">E-mail</label>
                <div class="input-group">
                    <input type="email" class="form-control" asp-for="Email" placeholder="exemplo@email.com" />
                </div>
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group m-4">
                <label asp-for="Senha">Senha</label>
                <div class="input-icon-wrapper">
                    <input type="password" class="form-control" asp-for="Senha" id="senha" placeholder="Digite sua senha" />
                    <span class="input-icon-toggle">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(x => x.Senha)
            </div>

            <div class="form-group m-4">
                <label asp-for="ConfirmarSenha">Confirmar Senha</label>
                <div class="input-icon-wrapper">
                    <input type="password" class="form-control" asp-for="ConfirmarSenha" id="ConfirmarSenha" placeholder="Confirme sua senha" />
                    <span class="input-icon-toggle">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
                @Html.ValidationMessageFor(x => x.ConfirmarSenha)
                @* <span asp-validation-for="ConfirmarSenha" class="text-danger"></span> *@
            </div>

            <div class="form-group row m-4">
                <button type="submit" class="btn btn-primary mb-3">Cadastrar</button>
                <a class="btn btn-outline-secondary mb-3" asp-action="" asp-controller="" role="button">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}