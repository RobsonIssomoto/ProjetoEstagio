@model EmpresaModel
@{
    ViewData["Title"] = "Confirmar Apagar Empresa";
}

<div class="text-center">
    <h3>Deseja apagar empresa (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger btn-block" asp-action="Deletar" asp-controller="Empresa" asp-route-id="@Model.Id">Deletar</a>
<a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Empresa" role="button">Cancelar</a>
