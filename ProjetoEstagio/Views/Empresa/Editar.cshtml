@model ProjetoEstagio.Models.EmpresaModel
@{
    ViewData["Title"] = "Editar Empresa";
}
<div class="container mb-4">
    <form asp-controller="Empresa" asp-action="Alterar" method="post" class="row d-flex justify-content-center" style="font-size: .75em">
        <div class="col-4 bg-white my-2 p-3 rounded shadow" style="min-width: 380px">
            <h3 class="text-center mb-3">EDITAR EMPRESA</h3>

            <input type="hidden" asp-for="Id"/>

            <div class="form-group row m-3">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" asp-for="Nome" />
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group row m-3">
                <label for="CNPJ">CNPJ</label>
                <input type="text" class="form-control" asp-for="CNPJ" />
                @Html.ValidationMessageFor(x => x.CNPJ)
            </div>

            <div class="form-group row m-3">
                <label for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group row m-3">
                <button type="submit" class="btn btn-danger mb-2">Editar</button>
                <button type="submit" class="btn btn-outline-secondary">Cancelar</button>
            </div>
        </div>
    </form>
</div>