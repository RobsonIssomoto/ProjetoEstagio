@model ProjetoEstagio.Models.ViewModels.UsuarioCadastroViewModel
@{
    ViewData["Title"] = "Cadastrar Usuário";
    // Usando o layout do Admin para esta área
    Layout = "_LayoutAdmin";
}

<h3 class="fw-bold">Novo Usuário</h3>
<p class="text-muted">Crie um novo usuário de acesso (Admin ou Orientador).</p>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">

                <form asp-controller="Usuario" asp-action="Cadastrar" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail (Login)</label>
                        <input type="email" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Perfil" class="form-label">Perfil de Acesso</label>
                        <select class="form-select" asp-for="Perfil"
                                asp-items="Html.GetEnumSelectList<ProjetoEstagio.Models.Enums.Perfil>()">
                            <option value="">Selecione um perfil...</option>
                        </select>
                        <span asp-validation-for="Perfil" class="text-danger small"></span>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Senha" class="form-label">Senha</label>
                            <input type="password" class="form-control" asp-for="Senha">
                            <span asp-validation-for="Senha" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmarSenha" class="form-label">Confirmar Senha</label>
                            <input type="password" class="form-control" asp-for="ConfirmarSenha">
                            <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-primary">Cadastrar Usuário</button>
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}