@model ProjetoEstagio.Models.UsuarioModel
@using ProjetoEstagio.Models.Enums;
@{
    ViewData["Title"] = "Editar Usuário";
}
<div class="container mb-4">
    <form asp-controller="Usuario" asp-action="Alterar" method="post" class="row d-flex justify-content-center" style="font-size: .75em">
        <div class="col-4 bg-white my-2 p-3 rounded shadow" style="min-width: 380px">
            <h3 class="text-center mb-3">EDITAR USUÁRIO</h3>

            <input type="hidden" asp-for="Id" />
            <div class="form-group row m-3">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" asp-for="Login" />
                @Html.ValidationMessageFor(x => x.Login)
            </div>

            <div class="form-group row m-3">
                <label for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" />
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group row m-3">
                <label for="Perfil">Perfil</label>
                <select asp-for="Perfil" class="form-select">
                    <option value="">Selecione</option>
                    <option value="@Perfil.Admin">Administrador</option>
                    <option value="@Perfil.Estagiario">Estagiário</option>
                    <option value="@Perfil.Representante">Representante</option>
                </select>
                @Html.ValidationMessageFor(x => x.Perfil)
            </div>

            <div class="form-group row m-3">
                <button type="submit" class="btn btn-danger mb-2">Editar</button>
                <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Usuario" role="button">Cancelar</a>
            </div>
        </div>
    </form>
</div>