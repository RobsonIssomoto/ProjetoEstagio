@model UsuarioModel
@{
}
<style>
    /* ======= SIDEBAR GERAL (Corrigido) ======= */
    #bdSidebar {
        width: 230px;
        background: #b91c1c; /* Vermelho Fatec */
        color: #fff;
        padding: 1.5rem 0.75rem; /* Ajustei o padding lateral */
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        min-height: 100vh;
        transition: all 0.3s ease-in-out;
    }

        #bdSidebar a {
            text-decoration: none;
            color: #fff; /* Não precisa de !important */
        }

        /* ======= LINKS ======= */
        #bdSidebar .nav-link {
            color: #fff; /* Não precisa de !important */
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
            transition: all 0.25s ease-in-out;
            position: relative;
        }

            #bdSidebar .nav-link i {
                width: 18px;
                text-align: center;
                font-size: 1.1rem;
                transition: transform 0.25s ease, color 0.25s ease;
            }

            /* ======= HOVER FUNCIONAL ======= */
            /* O seletor de hover deve ser aplicado diretamente no link (<a>),
          pois ele já é o .nav-link. Não precisamos do <li>.
        */
            #bdSidebar .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.25);
                transform: translateX(5px);
                color: #fff; /* Não precisa de !important */
                cursor: pointer;
            }

                /* ======= ÍCONE NO HOVER ======= */
                #bdSidebar .nav-link:hover i {
                    transform: scale(1.2);
                    color: #fff; /* Não precisa de !important */
                }

            /* ======= ITEM ATIVO ======= */
            #bdSidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.4);
                font-weight: 600;
            }

            /* ======= INDICADOR LATERAL (Opcional) ======= */
            /* Este indicador lateral estava no seu CSS antigo,
          você pode mantê-lo se gostar do efeito.
        */
            #bdSidebar .nav-link::before {
                content: "";
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%) scaleY(0);
                width: 4px;
                height: 60%;
                background: #fff;
                border-radius: 2px;
                transition: transform 0.25s ease;
                opacity: 0;
            }

            #bdSidebar .nav-link:hover::before,
            #bdSidebar .nav-link.active::before {
                transform: translateY(-50%) scaleY(1);
                opacity: 1;
            }

        /* ======= RODAPÉ ======= */
        #bdSidebar .sidebar-footer { /* Crie esta classe no HTML do rodapé se precisar */
            font-size: 0.85rem;
            color: rgba(255,255,255,0.8);
        }
</style>
<div id="bdSidebar"
     class="d-flex flex-column flex-shrink-0 px-3 pt-3 bg-danger text-white offcanvas-md offcanvas-start shadow-sm"
     style="width: 230px;"
     tabindex="-1" aria-labelledby="bdSidebarLabel">

    <!-- Botão de fechar no mobile -->
    <button type="button"
            class="btn-close btn-close-white d-md-none ms-auto mb-3"
            data-bs-dismiss="offcanvas"
            aria-label="Fechar"></button>

    <!-- Logo / título -->
