<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGE</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <!-- DataTables Bootstrap -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.bootstrap5.min.css" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger border-bottom box-shadow mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="border: 0;">
                    <i class="fa-solid fa-bars fa-border rounded-1" style="color: white"></i>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SGE</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item mx-4">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Inicio</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Sobre</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Contato</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Ajuda</a>
                        </li>
                        <li class="nav-item dropdown me-4">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Link
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>

                        @* @if (Model != null && Model.Perfil == ProjetoEstagio.Models.Enums.Perfil.Admin) *@
                        @* { *@


                        @* } *@
                        <li class="nav-item me-4">
                            <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="pesquisar">
                        @* <input class="form-control me-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar" /> *@
                        <a class="btn btn-outline-light" asp-controller="Login" asp-action="Index">Login</a>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <h1 class="text-center m-4"><img src="~/img/ftc.png" style="max-width: 150px" class="img-fluid" /></h1>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        Fatec Atibaia Avenida Jerônimo de Camargo – 421 (CIEM III) Caetetuba Atibaia – SP - CEP: 12951-540
        <div class="container">
            &copy; 2025 - ProjetoEstagio - <a href="https://fatecatibaia.cps.sp.gov.br/">Fatec</a>
        </div>
    </footer>

    <!-- 1. jQuery (O ÚNICO E PRINCIPAL) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- 2. Bootstrap (depende do jQuery) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 3. Font Awesome (ícones) -->
    <script src="https://kit.fontawesome.com/b02dd4a413.js" crossorigin="anonymous"></script>

    <!-- 4. DataTables JS (plugin, depende do jQuery) -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- 5. jQuery Mask (plugin, depende do jQuery) - NOVO! -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <!-- 6. Seu script customizado (deve ser carregado DEPOIS de todos os plugins) -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- 7. Scripts específicos da página (sempre por último) -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

